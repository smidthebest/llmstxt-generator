DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/llmstxt
CORS_ORIGINS=["http://localhost:5173"]
MAX_CRAWL_DEPTH=3
MAX_CRAWL_PAGES=200
CRAWL_CONCURRENCY=5
CRAWL_DELAY_MS=200

# OpenAI key for LLM-powered llms.txt generation (leave empty for deterministic fallback)
# Uses a custom env var name to avoid conflicts with globally-set OPENAI_API_KEY
LLMSTXT_OPENAI_KEY=sk-your-key-here
LLM_MODEL=gpt-5.2
