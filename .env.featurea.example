# Host port mapping (non-conflicting with other local projects)
FRONTEND_HOST_PORT=3011
BACKEND_HOST_PORT=8011
DB_HOST_PORT=5434

# Backend runtime config
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5434/llmstxt
DATABASE_URL_DOCKER=postgresql+asyncpg://postgres:postgres@db:5432/llmstxt
CORS_ORIGINS=["http://localhost:3011","http://localhost:5174"]

# LLM config
LLMSTXT_OPENAI_KEY=
LLM_MODEL=gpt-5.2

# Worker + queue behavior
RUN_SCHEDULER_WORKER=true
WORKER_ID=worker-1
TASK_LEASE_SECONDS=60
TASK_POLL_INTERVAL_MS=1000
TASK_MAX_ATTEMPTS=5
TASK_HEARTBEAT_INTERVAL_SECONDS=10
